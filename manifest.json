{
    "name": "Days Until - Goggins Style",
    "version": "1.0",
    "description": "Shows a countdown to your target date motivated by Goggins... if you want.",
    "manifest_version": 3,
    "background": {
        "service_worker": "background.js"
    },
    "action":{
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icon16.png",
            "48": "icon48.png",
            "128": "icon128.png"
        }
        },
    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    },
    "permissions": ["alarms", "storage", "notifications", "offscreen"]
    }
